<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hourNumber"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_menu"
        android:gravity="center"
        android:text="X"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mainInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hourNumber"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/hourNumber"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainInformation"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/hourNumber"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#CACACA"
        android:textSize="13sp" />
</RelativeLayout>